<!-- 3 entries from the blog -->
<!-- <section class=""> -->
<section class="blog_fullwidth ">
  <div class="container ">
    <div class="border_box ">
      <!-- <h3>Engage</h3> -->
      <% items = posts_and_videos.select{ |id, item| !item.respond_to?(:slug) || item.slug != featured_post.slug } %>
      
      <div>
        <% items.take(3).each do |index, item| %>
          <div class="home_posts_desktop">
            <% if item['_meta']['content_type_id'] == 'video' %>
              <%= partial "partials/video_list_item", :locals => { :video => item, :include_description => true } %>
            <% else %>
              <%= partial "partials/post_list_item", :locals => { :post => item, :include_excerpt => true } %>
            <% end %>
          </div>
        <% end %>
      </div>
      <div>
        <% items.take(3).each do |index, item| %>
          <div class="home_posts_mob">
            <% if item['_meta']['content_type_id'] == 'video' %>
              <%= partial "partials/download_video_item", :locals => { :video => item, :include_description => true } %>
            <% else %>
              <%= partial "partials/download_list_item", :locals => { :post => item, :include_excerpt => true } %>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>

