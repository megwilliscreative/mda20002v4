<body>


<!-- NAME & ARROW W RED BG -->
<section class="hero">
  <div class="container">
    <div class="main-message">
      <h1> Contact <i class="fas fa-arrow-down"></i></h1>
    </div>
  </div>
</section>


<!-- contact form with recaptcha -->


<section class="contact_section">
  <div class="container">
        <h3>Committee</h3>
        <h2>Get In Touch</h2>  
    <div class="contact_form">
      <div class="leave_message">



<!-- 
