<!DOCTYPE html>
<html>
<head>
  <title> Movement - Contact</title>
</head>
<body>


<!-- NAME & ARROW W RED BG -->
<section class="hero">
  <div class="container">
    <div class="main-message">
      <h1> Contact <i class="fas fa-arrow-down"></i></h1>
    </div>
  </div>
</section>


<!-- contact form with recaptcha -->


<section class="contact_section">
  <div class="container">
    <h3>Committee</h3>
    <h2>Get In Touch</h2> 
    
    <div class="contact_form">
      <div class="leave_message">

          <form id="mda_contact" method="POST" data-netlify-recaptcha="true" data-netlify="true" action="/thanks-contact.html">
            <input type="text" id="fname" name="First Name" placeholder="First Name"><br><br>
            <input type="text" id="lname" name="Last Name" placeholder="Last Name"><br><br>
            <input type="email" id="email" name="Email" placeholder="Email">
            <label for="message">Message</label>
            <textarea id="message" name="Message" placeholder="Message" rows="10"></textarea>
            
            <!-- <div>
              <div data-netlify-recaptcha="true"></div>
            </div> -->
            <button type="submit" name="submit" value="Submit" 
              class="g-recaptcha" 
              data-sitekey="6LdBBb8ZAAAAAN_8N0ODRpR3aUXnvwzm4OuB3h_y" 
              data-callback='onSubmit' 
              data-action='submit'>
              Send <i class="fas fa-chevron-right"></i>
            </button>
    <!-- recaptcha = v2 invis -->
          </form>
      </div>
      <div class="contact_address">
        <h2>PO&nbsp;Box&nbsp;2216,<br>Toowoomba&nbsp;QLD&nbsp;4350 <br>Ph.&nbsp;07&nbsp;4637&nbsp;8244</h2>
        <a href="mailto:admin@movement.org.au"><h2>admin@movement.org.au</h2></a>
      </div>
    </div> <!-- end contact form -->
  </div><!-- end container -->
</section>


<!-- slim email signup -->
<%= partial "partials/_e_signup_lrg" %>

<!-- grid of logos from SUPPORTED BY -->
<section class="engage_supporters">
  <div class="container">
    <div class="border_box" style="border-bottom:none;">
       <h3>Supported By</h3>
       <div class="support_grid">
          
          <!-- <ul> -->
          <% data.website.supporter.sort_by{ |id, e| e['_meta']['created_at'] }.each do |id, supporter| %>
            <div class="support_grid_box">
              <a href="<%= supporter.url %>" target="_blank">
                <%= image_tag supporter.logo.url, alt: supporter.name %>
              </a>
            </div>
          <% end %>                  
          <!-- </ul> -->
        </div>
      </div>
  </div>
</section>

</body>
</html>